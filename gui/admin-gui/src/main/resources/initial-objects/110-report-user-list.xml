	<!-- configuration properties -->
	<configuration xmlns:r="http://midpoint.evolveum.com/xml/ns/public/report">
		<r:hqlQuery>
			select u.oid as userOid, 
			u.name.orig as name, 
			u.givenName.orig as firstName, 
			u.familyName.orig as lastName, 
			u.activation.administrativeStatus as activationField 
			from RUser as u
			where $P{activation} = null or u.activation.administrativeStatus = $P{activation}
			order by u.name.orig
		</r:hqlQuery>
		<!--<r:activation>nu</r:activation>
		<r:activationDescription>Disabled</r:activationDescription>	-->
	</configuration>
